<h1>Post Details</h1>
<p>View the details of the selected post</p>


<table class="table">
  <tr>
    <th><%= link_to 'Edit', mysite_post_edit_path(:id => @post.id) %></th>
  </tr>
  <tr>
    <th><%= link_to 'Delete', mysite_post_delete_path(:id => @post.id) %></th>
  </tr>
</table>

<table class="table">
  <tr>
    <td><strong>Title:</strong></td>
    <td><%= @post.title %></td>
  </tr>

  <tr>
    <td><strong>Author:</strong></td>
    <td><%= @post.author %></td>
  </tr>

  <tr>
    <td><strong>Created Date:</strong></td>
    <td><%= @post.created_date %></td>
  </tr>

  <tr>
    <td><strong>Text:</strong></td>
    <td><%= @post.text %></td>
  </tr>
</table>